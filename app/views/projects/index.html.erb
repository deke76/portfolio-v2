<%= turbo_frame_tag "turbo-page-content" do %>
<div class="container bg-dark h-100 py-3" id='page-content'>
    <div class="container-fluid d-flex flex-column h-100">
      <form class="mb-3">
        <div class="container input-group rounded-circle">
          <span class="input-group-text bg-secondary border-0">
            <i class="bi bi-search text-light"></i>
          </span>
          <input type="text" class="form-control">
          <span class="input-group-text bg-secondary border-0">
            <a href="#" class="text-light text-decoration-none fst-italic" type="submit" disabled>Search</a>
          </span>
        </div>
      </form>

      <div id="carouselExampleControls" class="carousel slide flex-grow-1" data-bs-ride="carousel">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <div class="carousel-content">
              <h1 class='text-light m-auto'>Slide 1</h1>
            </div>
          </div>
          <div class="carousel-item">
            <div class="carousel-content">
              <h1>Slide 2</h1>
            </div>
          </div>
          <div class="carousel-item">
            <div class="carousel-content">
              <h1>Slide 3</h1>
            </div>
          </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
          <i class="bi bi-arrow-left-circle text-light" aria-hidden="true"></i>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
          <i class="bi bi-arrow-right-circle text-light" aria-hidden="true"></i>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
      
    </div>
</div>
<% end %>