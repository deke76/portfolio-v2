<%= turbo_frame_tag "social_turbo_frame",
    data: {
        controller: "icon",
        action: "click->icon#pageClick mouseenter->icon#pageMouseEnter mouseleave->icon#pageMouseLeave"
      },
      class: "nav-item__page--inactive" do %>
  <% controller = params[:controller].chop %>
  <%= link_to send("#{controller}_path", menu_item.name),
      data: { 
        turbo_frame: "turbo-#{controller}-content"
      },
      class: "nav-link text-secondary pb-1" do %>
    <i class="<%= menu_item.bootstrap_class %>"
       data-icon-target="link"></i>
  <% end %>
<% end %>